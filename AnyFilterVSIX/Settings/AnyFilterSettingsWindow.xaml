<Window x:Class="lpubsppop01.AnyFilterVSIX.AnyFilterSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:lpubsppop01.AnyFilterVSIX"
        Title="AnyFilter Settings" Width="600" SizeToContent="Height"
        ResizeMode="NoResize">
    <StackPanel Margin="6">
        <local:AnyFilterSettingsControl x:Name="ctrlMain"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,6,0,0">
            <Button Name="btnOK" Click="btnOK_Click" Width="70" Content="{local:NameToResourceBinding OK}"/>
            <Button Name="btnCancel" Click="btnCancel_Click" Width="70" Margin="6,0,0,0" Content="{local:NameToResourceBinding Cancel}"/>
        </StackPanel>
    </StackPanel>
</Window>
