<UserControl x:Class="lpubsppop01.AnyTextFilterVSIX.AutoCompleteTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:lpubsppop01.AnyTextFilterVSIX"
             mc:Ignorable="d" d:DesignHeight="20" d:DesignWidth="150" Name="this">
    <Grid>
        <TextBox Name="TextBox" TextChanged="TextBox_TextChanged" PreviewKeyDown="TextBox_PreviewKeyDown"/>
        <Popup x:Name="Popup" Height="100" PlacementTarget="{Binding ElementName=tbInput}" Placement="Bottom" VerticalOffset="-1" StaysOpen="True"
               MaxWidth="{Binding ActualWidth, ElementName=tbInput}" AllowsTransparency="True">
            <ListBox Name="lstWords" BorderThickness="1" PreviewKeyDown="lstWords_PreviewKeyDown" IsSynchronizedWithCurrentItem="True"/>
        </Popup>
    </Grid>
</UserControl>
