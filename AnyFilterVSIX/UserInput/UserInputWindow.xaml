<Window x:Class="lpubsppop01.AnyFilterVSIX.UserInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AnyFilter User Input" Width="600" Height="300"
        Name="this" Loaded="this_Loaded">
    <Grid Margin="6" FocusManager.FocusedElement="{Binding ElementName=txtUserInput}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Name="txtInput" Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox Grid.Row="1" Name="txtPreview" Text="{Binding PreviewText}"
                 IsReadOnly="True" Margin="0,6,0,0"
                 HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
        <DockPanel Grid.Row="2" Margin="0,6,0,0" LastChildFill="False">
            <CheckBox IsChecked="{Binding UsesEmacsLikeKeybindings, ElementName=this}">Uses Emacs like keybindings</CheckBox>
            <Button DockPanel.Dock="Right" Name="btnCancel" IsCancel="True" Click="btnCancel_Click" Width="60" Margin="6,0,0,0">Cancel</Button>
            <Button DockPanel.Dock="Right" Name="btnOK" IsDefault="True" Click="btnOK_Click" Width="60">OK</Button>
        </DockPanel>
    </Grid>
</Window>
