<Window x:Class="lpubsppop01.AnyFilterVSIX.FilterAdditionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:lpubsppop01.AnyFilterVSIX"
        Title="Add Filter" SizeToContent="WidthAndHeight" ResizeMode="NoResize" Name="this">
    <StackPanel Margin="6">
        <RadioButton IsChecked="{local:EnumToBooleanBinding SelectedID, ConverterParameter=Empty, ElementName=this}" Margin="0">Empty</RadioButton>
        <RadioButton IsChecked="{local:EnumToBooleanBinding SelectedID, ConverterParameter=MonoCSharpScript, ElementName=this}" Margin="0,6,0,0">Mono C# Script</RadioButton>
        <RadioButton IsChecked="{local:EnumToBooleanBinding SelectedID, ConverterParameter=CygwinBash, ElementName=this}" Margin="0,6,0,0">Cygwin bash</RadioButton>
        <RadioButton IsChecked="{local:EnumToBooleanBinding SelectedID, ConverterParameter=CygwinSed, ElementName=this}" Margin="0,6,0,0">Cygwin sed</RadioButton>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,6,0,0">
            <Button Name="btnOK" Click="btnOK_Click" Width="70" Content="{local:NameToResourceBinding OK}"/>
            <Button Name="btnCancel" Click="btnCancel_Click" Width="70" Margin="6,0,0,0" Content="{local:NameToResourceBinding Cancel}"/>
        </StackPanel>
    </StackPanel>
</Window>
